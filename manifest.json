 
 {
    "name": "PermaFormaT",
    "version": "1.0",
    "description": "Keep poliformat.upv.es session always open",
	"permissions": ["tabs", "http://*/*"],
    "background": {
      "scripts": ["index.js"],
      "persistent": false
    },
	  "content_scripts": [
    {
      "matches": ["*://poliformat.upv.es/*"],
      "js": ["index.js"]
    }
  ],
    "manifest_version": 2
  }
